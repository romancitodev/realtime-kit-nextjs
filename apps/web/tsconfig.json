{
	"extends": "@repo/typescript-config/tsconfig.next.json",
	"compilerOptions": {
		"allowJs": true,
		"module": "esnext",
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"socket.js",
		"auth.ts"
	],
	"exclude": ["node_modules"]
}
